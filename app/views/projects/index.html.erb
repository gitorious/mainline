<% @page_title = t("views.projects.title") -%>

<h1>Projects</h1>

<div class="with_divider">
  <div id="left">
    <% pull_box("Most active (last two weeks)") do -%>
      <ul class="with_icons">
        <% @active_recently.each do |project| -%>
          <li class="project"><%= link_to h(project.title), project -%></li>
        <% end -%>
      </ul>
    <% end -%>
  </div>
  <div id="right">
    <% pull_box("Most active (overall)") do -%>
      <ul class="with_icons">
        <% @active_overall.each do |project| -%>
          <li class="project"><%= link_to h(project.title), project -%></li>
        <% end -%>
      </ul>
    <% end -%>
  </div>
  <div class="clear"></div>
</div>

<ul class="project_list">
<% @projects.each do |project| -%>
  <li class="project_list_item">
    <%= render :partial => project, :object => project -%>
  </li>
<% end -%>
</ul>

<%= will_paginate @projects -%>

<% content_for :sidebar do -%>
  <ul class="links">
    <% if show_new_project_link? -%>
    <li class="new_project"><%= link_to t("views.projects.new"), new_project_path -%></li>
    <% end -%>
  </ul>
 
  <h4><%= t("views.projects.popular") %>:</h4>
  <ul class="tag_list">
    <% @tags.each do |tag| %>
      <li class="tag_size_3"><%= link_to h(tag.name), search_path(:q => "category:#{h(tag.name)}") -%> </li>
    <% end %>
  </ul>
<% end -%>