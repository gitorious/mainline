<% @title = t("views.projects.title") %>

<div class="container gts-container">
  <div class="row-fluid">
    <div class="span8">
      <%= sorting.render_widget %>
      <ul class="gts-listing">
        <%= render projects %>
      </ul>
      <%= raw JustPaginate.page_navigation(page, total_pages) { |n|
        projects_path(page: n, order: sorting.current_order) } %>
    </div>
    <div class="span4">
      <p class="clearfix">
        <a class="btn btn-primary pull-right" href="<%= new_project_path %>">
          <i class="icon-plus-sign icon-white"></i>
          <%= t("views.projects.create_new") %>
        </a>
      </p>
      <% if !tags.blank? %>
        <%= pull_box(t("views.projects.popular")) do %>
          <table class="table">
            <% tags.each do |tag| %>
              <tr>
                <td class="repository">
                  <%= link_to h(tag.name), search_path(:q => "@category:#{h(tag.name)}") %>
                </td>
              </tr>
            <% end %>
          </table>
        <% end %>
      <% end %>
      <% if !active_recently.blank? %>
        <%= pull_box("Most active recently") do %>
          <table class="table">
            <% active_recently.each do |project| %>
              <tr>
                <td><%= link_to h(project.title), project %></td>
              </tr>
            <% end %>
          </table>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
