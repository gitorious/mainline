<% benchmark("Event rendering") do -%>
<ul class="events">
<% events.group_by{|e| e.created_at.to_s(:human) }.each do |day, events_group| -%>
  <li>
    <p class="date"><%= day -%></p>
    <ul class="event_instances">
      <%= render :partial => events_group -%>
    </ul>
  </li>
<% end -%>
</ul>
<%= will_paginate events -%>
<% end -%>