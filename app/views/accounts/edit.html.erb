<h1><%= t("views.account.edit_title") %></h1>
<%= error_messages_for :user -%>

<% form_for @user, :url => account_path do |f| -%>
  <p>
    <%= f.label :email, t(:email, :scope => 'activerecord.attributes.user') -%><br />
    <%= f.text_field :email, :class => "text" -%>
  </p>   
  <p>
    <%= f.label :fullname, t("views.account.realname") -%><br />
    <%= f.text_field :fullname, :class => "text" -%>
  </p>
  <p>
    <%= f.label :url, t("views.account.url") -%><br />
    <%= f.text_field :url, :class => "text" -%>
  </p>
  <p>
    <%= f.label :url, t("views.account.openid") -%><br />
    <%= f.text_field :identity_url, :class => "text" -%>
  </p>
  
  <%= f.submit t("views.common.save") -%>
<% end -%>

<% content_for :submenu do -%>
  <li><%= link_to t("views.account.my_account"), account_path -%></li>
  <li><%= link_to t("views.account.chg_passwd"), password_account_path -%></li>
  <li><%= link_to t('views.account.license'), account_license_path %></li>
<% end -%>