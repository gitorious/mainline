<% type = owner.class.model_name.underscore %>

<%= render "#{type.pluralize}/header", type.to_sym => owner, :active => :wiki %>

<% @title = t("views.pages.last_n_edits_html", { :n => 30, :title => page.title }) %>

<div class="container">
  <%= render('pages/actions', :owner => owner, :page => page, :active => :history) %>
  <h2 class="gts-legend">
    <%= t("views.pages.last_n_edits_html", {
            :n => 30,
            :title => link_to(page.title, wiki_page_path(owner, page.title))
          }) %>
  </h2>
  <%= render(:partial => "commits/log", :locals => {
          :repository => wiki_repository,
          :ref => "master",
          :commits => commits,
          :no_pagination => true,
          :display_diffs => true
        }) %>
</div>
