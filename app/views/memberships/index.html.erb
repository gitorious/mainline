<table class="listing tree">
	<tr>
		<td><%= t(:created_at, :scope => "activerecord.attributes.memberships").humanize %></td>
		<td><%= t(:login, :scope => "activerecord.attributes.user").humanize %></td>
		<td><%= t(:email, :scope => "activerecord.attributes.user").humanize %></td>
		<td><%= t(:name, :scope => "activerecord.attributes.roles").humanize %></td>
		<td></td>
	</tr>
	<% @memberships.each do |membership| -%>
	<tr>
	  <td><%= membership.created_at.to_s(:short) -%></td>
	  <td><%=h membership.user.login -%></td>
	  <td><%=h membership.user.email -%></td>
	  <td><%=h membership.role.name -%></td>
	  <td><%= link_to t("views.common.edit"), edit_group_membership_path(@group, membership) -%></td>
	</tr>
	<% end -%>
</table>

<%= will_paginate @memberships -%>

<% if @group.admin?(current_user) -%>
  <p><%= link_to t("views.memberships.add_new_member"), new_group_membership_path(@group)  -%></p>
<% end -%>