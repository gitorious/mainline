<div class="comment">
  <a name="<%= dom_id(comment) -%>"></a>
  <div class="body"><%= markdown(sanitize(comment.body)) -%></div>
  <p class="byline">
    <span class="avatar">
      <%= link_to(gravatar(comment.user.email, { :size => 16 }), user_path(comment.user)) %>
    </span>
    <%= link_to(h(comment.user.login), comment.user) -%> | 
    <span class="permalink"><%= link_to time_ago_in_words(comment.created_at) + " ago", "##{dom_id(comment)}" -%></span>
  </p>
</div>